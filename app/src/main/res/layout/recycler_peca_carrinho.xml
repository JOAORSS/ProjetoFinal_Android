<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/carrinho_peca_imagem"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/image_view_border"
        android:padding="1dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/carrinho_peca_info_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/carrinho_peca_imagem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/carrinho_peca_imagem"
        app:layout_constraintTop_toTopOf="@+id/carrinho_peca_imagem">

        <TextView
            android:id="@+id/carrinho_peca_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Nome completo da peca que émuito longo para caber"
            android:textColor="@color/md_theme_onPrimaryFixed"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quantidade: "
                android:textColor="@color/md_theme_outline_mediumContrast"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/carrinho_peca_quantidade"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4"
                android:textColor="@color/md_theme_outline_mediumContrast" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preço: "
                android:textColor="@color/md_theme_outline_mediumContrast"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/carrinho_peca_preco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="R$ 54,54"
                android:textColor="@color/md_theme_outline_mediumContrast" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/carrinho_item_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carrinho_peca_imagem" />

</androidx.constraintlayout.widget.ConstraintLayout>

