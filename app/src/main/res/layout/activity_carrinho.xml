<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/carrinho_main_layout"
    android:background="@color/md_theme_secondaryFixedDim"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CarrinhoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/carrinho_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_secondaryFixedDim"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/carrinho_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/md_theme_secondaryFixedDim"
            app:navigationIcon="@drawable/voltar"
            app:navigationIconTint="@color/md_theme_onSurfaceVariant_mediumContrast"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Carrinho"
            app:titleTextColor="@color/md_theme_onSurfaceVariant_mediumContrast" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/carrinho_textView_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/md_theme_onPrimaryFixed"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Itens do carrinho:"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/carrinho_app_bar_layout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/carrinho_recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/carrinho_linearLayout_valor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carrinho_textView_titulo"
        tools:listitem="@layout/recycler_peca_carrinho" />

    <LinearLayout
        android:id="@+id/carrinho_linearLayout_valor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="end"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/carrinho_button_finalizar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/carrinho_textView_labelValor"
            android:layout_width="wrap_content"
            android:textColor="@color/md_theme_onPrimaryFixed"
            android:layout_height="wrap_content"
            android:text="Valor total: "
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/carrinho_textView_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_theme_onPrimaryFixed"
            android:text="R$ 00,00"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textStyle="bold"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/carrinho_button_finalizar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/md_theme_tertiaryFixedDim_highContrast"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:text="Finalizar compra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

